<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Registration"
    android:background="@drawable/gradient_color">



    <Button
        android:id="@+id/button2"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="70dp"
        android:background="@drawable/ic_insert_photo"/>


    <EditText
        android:layout_marginTop="-60dp"
        android:layout_marginLeft="-210dp"
        android:id="@+id/username"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundColor="#6790AD"
        android:TextType="bold"
        android:drawableLeft="@drawable/ic_person2"
        android:drawablePadding="10dp"
        android:hint="Username"
        android:inputType="textEmailAddress"
        android:padding="20dp"
        android:padding_left="5dp"
        android:textColorHint="#fff" />
    <EditText
        android:id="@+id/create_email"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="-300dp"
        android:TextType="bold"
        android:backgroundColor="#fff"
        android:drawableLeft="@drawable/ic_email"
        android:drawablePadding="10dp"
        android:hint="E-mail"
        android:inputType="textEmailAddress"
        android:padding="20dp"
        android:padding_left="5dp"
        android:textColorHint="#fff"
        android:layout_marginTop="0dp"/>

    <EditText
        android:id="@+id/password2"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="-300dp"
        android:TextType="bold"
        android:backgroundColor="#fff"
        android:drawableLeft="@drawable/ic_lock_black_24dp_2"
        android:drawablePadding="10dp"
        android:hint="Create password"
        android:inputType="textPassword"
        android:padding="20dp"
        android:padding_left="5dp"
        android:textColorHint="#fff"
        android:layout_marginTop="60dp"/>
    <EditText
        android:id="@+id/confirm"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="-300dp"
        android:TextType="bold"
        android:backgroundColor="#fff"
        android:drawableLeft="@drawable/ic_lock_black_24dp_2"
        android:drawablePadding="10dp"
        android:hint="Confirm password"
        android:inputType="textPassword"
        android:padding="20dp"
        android:padding_left="5dp"
        android:textColorHint="#fff"
        android:layout_marginTop="120dp"/>

    <Button
        android:id="@+id/button_reg"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginLeft="-290dp"
        android:layout_marginTop="200dp"
        android:background="@drawable/button2_color"
        android:text="Register"
        android:textColor="#fff" />

    <TextView
        android:id="@+id/textView_sign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Sign In"
        android:textColor="#FFFFFF"
        android:textSize="15dp"
        android:layout_marginTop="550dp"
        android:layout_marginLeft="-180dp"/>


</LinearLayout>